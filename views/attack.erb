<body background="http://data.whicdn.com/images/150288560/large.jpg">
  <div align="center">
    <font face="courier new" size="4">
    <h1> <%= @game.player_1.name %> tickled <%= @game.player_2.name %> till <%= @game.player_2.name %> peed! </h1>
    <h1> HE HE HE </h1>
  <img src='http://24.media.tumblr.com/130f821e0c1c0ba7490622aa870ffe96/tumblr_n4iuliOlHb1tziei6o1_500.gif'>
  <div>
    <%= @game.player_1.name %>has<%= @game.player_1.hp %> bananas
    <br>
    <%= @game.player_2.name %>has<%= @game.player_2.hp %> bananas
  </div>
  <form action= "/attack" >
    <div>
      <label for = "Tickle back"><b><%= @game.defender.name %>, are you going to just stand there and let <%= @game.attacker.name %> tickle you?! go on, tickle <%= @game.attacker.name %> back!</b></label>
      <br>
      <% @game.switch %>
      <input type="submit" value = "TICKLE!" style="font-family:'courier new'; color:yellow; font-size: 25px; height: 75; width: 330px; background-color: #000000"/>
    </div>
  </form>
</div>
<form action='/play'>
  <input type='submit' value='OK' style="font-family:'courier new'; font-weight: bold; color:black; font-size: 30px; height: 75; width: 330px; background-color: yellow;margin-left:auto;margin-right:auto;display:block;margin-top:22%;margin-bottom:0%">
</form>
